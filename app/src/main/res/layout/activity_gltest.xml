<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1F">

    <!-- GL渲染容器 - 占据整个背景 -->
    <FrameLayout
        android:id="@+id/gl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- FPS/Time卡片放在屏幕上端 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="top"
        app:cardBackgroundColor="#801C1B1F"
        app:cardCornerRadius="12dp"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fpsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FPS: 0 | Time: 0s"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/infoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="大规模球体渲染测试 - 100,000个球体"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="#B0FFFFFF" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 性能评级在屏幕底部 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/performanceCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:cardBackgroundColor="#8032214A"
        app:cardCornerRadius="12dp"
        app:contentPadding="16dp">
        
        <TextView
            android:id="@+id/performanceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="性能评级结果将在此显示"/>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
