<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 设置参数区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GL ES测试设置"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>
            
            <!-- 数量显示行 - 修复了背景颜色问题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/ballCountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="球体数量"
                    android:textSize="16sp"/>
                
                <TextView
                    android:id="@+id/ballCountValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100,000"
                    android:gravity="end"
                    android:textSize="16sp"/>
            </LinearLayout>
            
            <!-- 滑块控制 -->
            <com.google.android.material.slider.Slider
                android:id="@+id/ballCountSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="10000"
                android:valueTo="500000"
                android:stepSize="10000"/>
            
            <!-- 滑块范围 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10,000"
                    android:textSize="14sp"/>
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500,000"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        
        <!-- 警告信息 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注意：增加球体数量将显著提高GPU负载"
            android:textColor="?attr/colorError"
            android:padding="16dp"
            android:textSize="14sp"/>

    </LinearLayout>
</ScrollView>
